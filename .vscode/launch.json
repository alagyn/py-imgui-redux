{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run-example",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/window_boilerplate.py",
            "cwd": "${workspaceFolder}/examples",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONPATH": "${workspaceFolder}/build/"}
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/venv/bin/python",
            "processId": "",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python C++ Debug",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "run-example",
            "cppAttachName": "(gdb) Attach",
        },
        {
            "name": "run-autogen",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/autogen/gen.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONPATH": "${workspaceFolder}/build/"},
            "args":[
                "autogen-configs/imgui.txt",
                "build/generated/preprocessed_imgui.h",
                "--header-out=/dev/null"
            ]
        },
    ]
}